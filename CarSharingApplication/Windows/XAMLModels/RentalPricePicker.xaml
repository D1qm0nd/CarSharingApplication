<UserControl x:Class="CarSharingApplication.Windows.XAMLModels.RentalPricePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarSharingApplication.Windows.XAMLModels"
             mc:Ignorable="d" 
             >
    <Border Background="Orange" Height="150" Width="400" BorderBrush="OrangeRed" BorderThickness="2" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Slider x:Name="HourPicker" Grid.Row="0" Margin="10 10 10 10" Minimum="1" Maximum="24" IsSnapToTickEnabled="True" TickFrequency="1" ValueChanged="MathPrice" VerticalAlignment="Center"/>
            <Label x:Name="Hour" Grid.Row="1" Margin="10 10 10 10" Content="{Binding ElementName=HourPicker, Path=Value}"/>
            <Label x:Name="PriceShow" Grid.Row="2" Margin="10 10 10 10" Content="{Binding Price}"/>

        </Grid>
    </Border>
</UserControl>
